<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="25dp"
    tools:context=".Booking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />
        <TextView
            android:id="@+id/user_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Checkout"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:textSize="22sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="145dp"
                android:layout_height="180dp"
                tools:srcCompat="@tools:sample/avatars"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Event Name"
                android:textSize="18sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Location"
                android:textSize="15sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Date: "
                android:textSize="15sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/ticketQtyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Ticket Quantity "
            android:textSize="15sp"
            android:layout_marginLeft="30dp"

            />

        <Button
            android:id="@+id/buttonDecrement"
            android:layout_width="35dp"
            android:padding="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_height="35dp"
            android:text="-"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom_increment_button"
            />
        <TextView
            android:id="@+id/ticketValueTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="1"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />
        <Button
            android:id="@+id/buttonIncrement"
            android:layout_width="35dp"
            android:padding="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_height="35dp"
            android:text="+"
            android:textSize="15sp"
            android:background="@drawable/custom_increment_button"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/ticketCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="5 x Ticket"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"

            />


        <TextView
            android:id="@+id/ticketValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Rs.11,000"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            />
    </LinearLayout>

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Proceed to Pay"
        android:textSize="15sp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_increment_button"
        />

    <ProgressBar
        android:id="@+id/progressBarBook"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>