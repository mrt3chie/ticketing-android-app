<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />
        <TextView
            android:id="@+id/user_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Back "
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:textSize="22sp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageQrBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/transactionIDTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Id:"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/BookedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booked Date:"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/EventNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event  Name:"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/eventDateTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Date:"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        />


    <TextView
        android:id="@+id/ticketAmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount:"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/ticketStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TicketStatus :"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        />



</LinearLayout>